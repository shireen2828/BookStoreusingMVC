<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/CSS/Layout.css" rel="stylesheet" type="text/css" />
    @*<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">*@
</head>
<body>
    <nav class="navbar navbar-light" style="background-color: maroon; display: flex; justify-content: space-evenly;border-radius:0px;">
        <svg xmlns="http://www.w3.org/2000/svg" href="https://localhost:44309/Books/GetBooks" width="35" height="35" fill="currentColor" class="bi bi-book-fill" viewBox="0 0 16 16" color=" white" ! style="position: relative; left: 5%; top: 10px; height: 28px;">
            <path d="M8 1.783C7.015.936 5.587.81 4.287.94c-1.514.153-3.042.672-3.994 1.105A.5.5 0 0 0 0 2.5v11a.5.5 0 0 0 .707.455c.882-.4 2.303-.881 3.68-1.02 1.409-.142 2.59.087 3.223.877a.5.5 0 0 0 .78 0c.633-.79 1.814-1.019 3.222-.877 1.378.139 2.8.62 3.681 1.02A.5.5 0 0 0 16 13.5v-11a.5.5 0 0 0-.293-.455c-.952-.433-2.48-.952-3.994-1.105C10.413.809 8.985.936 8"></path>
        </svg>
        <a class="navbar-brand" href="https://localhost:44309/Books/GetBooks" style="color: white; position: relative; left: 5px;">
            @*<img src="../images/reading.png" width="30" height="30" class="d-inline-block align-top" alt="">*@
            Bookstore
        </a>

        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" style="margin-top: 8px;max-width: 35%; position: relative; right: 45px;">

        <a class="navbar-brand" href="https://localhost:44309/Cart/Getcart" style="color: white; font-size: medium;">
            Cart
            @*<img src="../images/shopping-cart.png" width="30" height="30" class="d-inline-block align-top" />*@
        </a>
        <svg xmlns="http://www.w3.org/2000/svg" href="https://localhost:44309/Cart/Getcart" width="30" height="30" fill="White" class="bi bi-cart3" viewBox="0 0 16 16" style="position: relative; right: 4%; height: 47px; width: 25px;">
            <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .49.598l-1 5a.5.5 0 0 1-.465.401l-9.397.472L4.415 11H13a.5.5 0 0 1 0 1H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l.84 4.479 9.144-.459L13.89 4H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
        </svg>

        <a class="navbar-brand" href="https://localhost:44309/Wishlist/Getwishlist" style="color: white; font-size: medium; position:relative; right:15px;bottom:6px;">
            Wishlist
            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="White" style="color:white;height: 23px;position: relative;top: 3px;" class="bi bi-bucket" viewBox="0 0 16 16">
                <path d="M2.522 5H2a.5.5 0 0 0-.494.574l1.372 9.149A1.5 1.5 0 0 0 4.36 16h7.278a1.5 1.5 0 0 0 1.483-1.277l1.373-9.149A.5.5 0 0 0 14 5h-.522A5.5 5.5 0 0 0 2.522 5zm1.005 0a4.5 4.5 0 0 1 8.945 0H3.527zm9.892 1-1.286 8.574a.5.5 0 0 1-.494.426H4.36a.5.5 0 0 1-.494-.426L2.58 6h10.838z" />
            </svg>
        </a>

        <div class="btn-group" role="group" aria-label="Basic example" style="position:relative;top:15px;">
            <input id="login_btn" type="button" value="Login /" onclick="@("window.location.href='" + Url.Action("Login", "User") + "'");" />
            <input id="register_btn" type="button" value="Register" />
        </div>
    </nav>
        <div class="container body-content">
            @RenderBody()

            <footer class="footer">
                @*<p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>*@
                <p>copyright 2020,Bookstore Private Limited.All Rights Reserved</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
